<div class="container">
<h1>Restful Caves to choose from:</h1>

<div class="row">
  <% @caves.each do |cave| %>
  <div class="col-md-4">
    <div class="card-trip">
      <img src="https://images.unsplash.com/photo-1554052199-8a7788f67994?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1489&q=80">
      <div class="card-trip-infos">
        <div>
          <h2><%= link_to cave.address, cave_path(cave) %></h2>
          <p> description:<%= cave.description %></p>
        </div>
        <h2 class="card-trip-pricing"><%= cave.price_per_night %>  <i class="fas fa-fish"></i></h2>
        <img src="https://res.cloudinary.com/beartechnologies/image/upload/v1558452206/BearBnB/bearbnb1_hrs7kx.png" class="card-trip-user avatar-bordered"/>
      </div>
    </div>
  </div>
  <% end %>
</div>
<br>
<%= link_to "Add a cave!", new_cave_path, class: "btn btn-primary" %>

</div>
