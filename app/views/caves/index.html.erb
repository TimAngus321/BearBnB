
<div class="content-index">
  <div class="cards-index">
  <h1 style="display: inline-block;">Restful Caves to choose from</h1>
    <div class="row">
      <% @caves.each do |cave| %>
        <div class="col-md-6">
          <%= link_to cave_path(cave) do %>
          <div class="card-trip">
           <% if cave.photo == nil %>
              <img src="https://images.unsplash.com/photo-1554052199-8a7788f67994?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1489&q=80">
           <% else %>
              <%= cl_image_tag cave.photo, class: "cave_img"%>
           <% end %>
            <div class="card-trip-infos">
              <div>
                <h2><%= cave.address %></h2>
                <p><%= cave.description %></p>
              </div>
              <h2 class="card-trip-pricing"><%= cave.price_per_night %>  <i class="fas fa-fish fish-animation"></i></h2>
              <img src="https://res.cloudinary.com/beartechnologies/image/upload/v1558452206/BearBnB/bearbnb1_hrs7kx.png" class="card-trip-user avatar-bordered"/>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
     </div>
   </div>
  <div
      id="map"
        style="width: 400px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>


