<h1>New Cave</h1>

<%= simple_form_for(@cave) do |f| %>
    <%= f.input :address %>
    <%= f.input :square_meters %>
    <%= f.input :occupancy %>
    <%= f.input :availability %>
    <%= f.input :price_per_night %>
    <%= f.submit "Add a new cave", class: "btn btn-primary"%>
<% end %>

